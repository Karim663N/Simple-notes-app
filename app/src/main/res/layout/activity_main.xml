<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Empty space -->

    <View
        android:layout_width="match_parent"
        android:layout_height="165dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Login to secret notes"
        android:textColor="#229CFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- TextInputEditText for userId -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/userId"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:height="48dp"
        android:background="@drawable/rounded_input_border"
        android:hint="Secret name"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <!-- EditText for secretPassword -->
    <EditText
        android:id="@+id/secretPassword"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:height="48dp"
        android:autofillHints="Password"
        android:background="@drawable/rounded_input_border"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:ignore="LabelFor" />

    <!-- Spacing -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Button -->

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/black_button"
        android:backgroundTint="#FBFAFA"
        android:shadowColor="#000000"
        android:text="Go secret !"
        android:textColor="#FFFFFF"
        app:backgroundTint="#111111"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/newUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/black_button"
        android:backgroundTint="#FBFAFA"
        android:shadowColor="#000000"
        android:text="New secret"
        android:textColor="#FFFFFF"
        app:backgroundTint="#111111"
        tools:ignore="HardcodedText" />

</LinearLayout>
